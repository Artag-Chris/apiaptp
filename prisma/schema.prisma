generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Payer {
  id       Int     @id @default(autoincrement())
  name     String
  lastName String
  email    String  @unique
  document String 
  documentType String 
  transactions Transaction[]
}

model Transaction {
  id        Int     @id @default(autoincrement())
  reference String
  description String
  status    String
  amount    Decimal
  payerId    Int
  payer     Payer    @relation(fields: [payerId], references: [id])
  fecha     DateTime @default(now())
}